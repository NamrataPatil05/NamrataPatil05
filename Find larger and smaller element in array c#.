using System;
using System.IO;
using System.Linq;
using System.Collections.Generic;

namespace CSharp_Shell
{

    public class Program 
    {
        public static void Main()
        {
			int [] a=new int [50];
			int i,large,n;
			Console.WriteLine("Entet size of array");
			n=Convert.ToInt32(Console.ReadLine());
			Console.WriteLine("Enter Element In Array");
			for(i=0;i<n;i++)
			{
				a[i]=Convert.ToInt32(Console.ReadLine());
			}
			large=a[0];
			for(i=0;i<n;i++)
			{
				if(large<a[i])
				{
					large=a[i];
				}
			}
			int small=a[1];
			for(i=0;i<n;i++)
			{
				if(small>a[i])
				{
					small=a[i];
				}
			}
			Console.WriteLine("Element in array");
			for(i=0;i<n;i++)
			{
				Console.WriteLine(a[i]);
			}
			Console.WriteLine("Larger Element in Array"+large);
      Console.WriteLine("Smallest Element in Array"+small);
        }
    }
}

Output:-

Entet size of array
5
Enter Element In Array
19
47
16
53
64
Element in array
19
47
16
53
64
Larger Element in Array64
Smallest Element in Array16
